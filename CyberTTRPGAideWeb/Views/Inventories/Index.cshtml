@model IEnumerable<CyberTTRPGAideWeb.Models.Entities.Inventory>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ItemCount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ItemCount)
            </td>
            <td>
                    @Html.ActionLink("Edit", "Edit", new { characterSheetId = item.CharacterSheetId, gameItemId = item.GameItemId }) |
                    @Html.ActionLink("Details", "Details", new { characterSheetId = item.CharacterSheetId, gameItemId = item.GameItemId }) |
                    @Html.ActionLink("Delete", "Delete", new { characterSheetId = item.CharacterSheetId, gameItemId = item.GameItemId })
            </td>
        </tr>
}
    </tbody>
</table>
